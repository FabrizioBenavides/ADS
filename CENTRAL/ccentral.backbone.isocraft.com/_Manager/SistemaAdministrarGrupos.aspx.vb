    '====================================================================
    ' Name       : strRecordBrowserHTML
    ' Description: Regresa el HTML del navegador de registros
    ' Accessor   : Read
    ' Throws     : Ninguna
    ' Output     : String
    '====================================================================
    Public Function strRecordBrowserHTML() As String

        ' Declaramos e inicializamos las constantes locales
        Const intElementsPerPage As Integer = 10
        Const strRecordBrowserName As String = "SistemaAdministrarGrupos"

        ' Declaramos e inicializamos las variables locales
        Dim intSelectedPage As Integer = CInt(isocraft.commons.clsWeb.strGetPageParameter("intNavegadorRegistrosPagina", "1"))
        Dim astrDataArray As Array = Benavides.CC.Data.clstblGrupoUsuario.strBuscar(0, "", "", "", 0, 0, Now, "", Benavides.CC.Commons.clsRecordBrowser.clsIndicator.intCalculateFirstElement(intSelectedPage, intElementsPerPage), intElementsPerPage, strConnectionString)
        Dim astrDataRow As Array

        ' Reemplazamos las cadenas "False" y "True" por "No" y "Sí" en el campo "blnGrupoUsuarioReplicable"
        For Each astrDataRow In astrDataArray
            If CStr(astrDataRow.GetValue(4)).Equals("False") Then
                Call astrDataRow.SetValue("No", 4)
            Else
                Call astrDataRow.SetValue("Sí", 4)
            End If
        Next

        ' Generamos el navegador de registros
        Return Benavides.CC.Commons.clsRecordBrowser.strGetHTML(strRecordBrowserName, astrDataArray, intSelectedPage, intElementsPerPage, strThisPageName & "?")

    End Function

    Private Sub Page_Load(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles MyBase.Load

        ' Enviamos al usuario actual a la página de acceso, si no tiene privilegios de acceder a esta página
        If Benavides.CC.Business.clsConcentrador.clsControlAcceso.blnPermitirAccesoObjeto(intGrupoUsuarioId, strThisPageName, strConnectionString) = False Then
            Call Response.Redirect("../Default.aspx")
        End If

        ' Almacenamos el comando ejecutado
        strCmd = isocraft.commons.clsWeb.strGetPageParameter("strCmd", "")

        ' Ejecutamos el comando indicado
        Select Case strCmd

            Case "Agregar"

                Call Response.Redirect("SistemaEditarGrupo.aspx?strCmd=Agregar")

            Case "Editar"

                Dim intGrupoUsuarioId As Integer = CInt(isocraft.commons.clsWeb.strGetPageParameter("intGrupoUsuarioId", "0"))
                If intGrupoUsuarioId > 0 Then
                    Call Response.Redirect("SistemaEditarGrupo.aspx?strCmd=Editar&intGrupoUsuarioId=" & intGrupoUsuarioId)
                End If

        End Select

    End Sub

