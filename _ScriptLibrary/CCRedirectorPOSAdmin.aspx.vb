    '====================================================================
    Public ReadOnly Property strPageName() As String
        Get
            If Request.QueryString("strPageName") <> "" Then
                Return "/_ScriptLibrary/" + Request.QueryString("strPageName").ToString
            Else
                If Request.Form("strPageName") <> "" Then
                    Return "/_ScriptLibrary/" + Request.Form("strPageName").ToString
                Else
                    Return ""
                End If
            End If
        End Get
    End Property

