    Private Sub Page_Load(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles MyBase.Load
        Dim objPageNameSection As String()
        Dim strTargetPage As String


        If strPageName.Length > 0 Then

            objPageNameSection = Nothing
            strTargetPage = ""

            objPageNameSection = strPageName.Split("/".ToCharArray)
            strTargetPage = objPageNameSection(UBound(objPageNameSection))

            Response.Redirect("../Static/Help/" & strTargetPage.Substring(0, (strTargetPage.Length - 5)) & ".htm")

        End If
    End Sub

